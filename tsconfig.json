{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "declarationDir": "types",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "types": ["jest"]
  },
  "include": ["src"]
}
